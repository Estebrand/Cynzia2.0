<p id="notice"><%= notice %></p>


<h1 class="storefront-title">All Series</h1>

<%= link_to 'New Series', new_group_path, class: "btn btn-default" %>

  <table class="table">
    <thead>
      <tr class="red">
        <th>Image</th>
        <th>Name</th>
        <th>Year</th>
        <th>Description</th>
        <th>Total qty</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody> 
      <% @groups.each do |series| %>
        <tr>
         
          <td><%= image_tag series.image.url, class: "thumb" %></td>
          <td><%= series.name %></td>
          <td><%= series.year %></td>
          <td><%= series.description %></td>
          <td><%= series.total_qty %></td>
          <td><%= link_to 'Show', series, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_group_path(series), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Series', new_group_path, class: "btn btn-default" %>
