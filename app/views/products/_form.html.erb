<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <br />
  
  <div class="row">
  <div class="col col-lg-5 col-md-12 col-sm-12">
<!-- Image -->
  <div class="field">
    
    <% if product.image.url != nil %>
    <%= image_tag product.image.url, class: "products-pic" %>
    <% end %>
  </div>
    <!-- Upload Image -->


        <div class="form-group">
          <strong class="products-label">Upload an Image</strong>
          <%= form.file_field :image, id: :image, class: "btn btn-default form-control"   %>
    


        </div>

       
<!-- Image Name -->
        <div class="field">
          <%= form.label :name, class: "products-label" %>
          <%= form.text_field :name, id: :product_name, class: "form-control" %>
        </div>


<!--  Image Type -->

        <div class="form-group">
          <%= form.label :image_type, class: "products-label" %>
          <%= form.select :image_type, ['Square', 'Landscape', 'Portrait'], {include_blank: "Please select a format"}, class: "form-control" %>
        </div>

<!-- Category -->


        <div class="form-group">
          <%= form.label :category, class: "products-label" %>
          <%= form.select :category, ['Fine Art', 'People Portraits', 'Pet Portraits'], {include_blank: "Please select a category"}, class: "form-control" %>

        </div>



<!-- Select a Series -->

        <div class="form-group" >
        
        <p class="products-label">Select a Series </p>
        <%= form.select :series_name, @group.collect {|s| [s.name, s.name]}, {include_blank: "Please select a series"}, class: "form-control" %>
    
        </div>
<!-- Year -->
    <div class="field">
      <%= form.label :year, class: "products-label" %>
      <%= form.number_field :year, id: :product_year, in: 1960...2070, class: "form-control" %>
    </div>

    </div>
    <div class="col col-lg-3 col-md-12 col-sm-12">




<!-- Feature or not -->
      <div class="row">
        <div class="col col-sm-4 col-lg-12">

        <div class="field btn-for-sale" data-toggle="toogle">
          <%= form.label "Feature on Home Screen", class: "products-label" %>
            <div class=" form-group">
              <%= form.label :feature_image, "Yes", :value => "true" %>
              <%= form.radio_button :feature_image, true%>
             
              <p></p>

              <%= form.label :feature_image, "No", :value => "false" %>      
              <%= form.radio_button :feature_image, false %>
            </div>
         </div>

       </div>
        <div class="col col-sm-4 col-lg-12">
<!-- Feature or not -->
          <div class="field btn-for-sale" data-toggle="toogle">
            <%= form.label "Previous Work", class: "products-label" %>
            <p><i>Will not be featured in Portfolio</i></p>
              <div class=" form-group">
              <%= form.label :previous_work, "Yes", :value => "true"  %>
              <%= form.radio_button :previous_work, true%>

              <p></p>

              <%= form.label :previous_work, "No", :value => "false" %>      
              <%= form.radio_button :previous_work, false %>
            </div>
         </div>
      </div>
      <div class="col col-sm-4  col-lg-12">

  <!-- For Sale Toogle -->
        <div class="field btn-for-sale" data-toggle="toogle">
          <%= form.label :for_sale, class: "products-label" %>
            <div class=" form-group" >
    
              <%= form.label :for_sale, "Sale", :value => "true" %>
              <%= form.radio_button :for_sale, true %>
             
              <p></p>

              <%= form.label :for_sale, "No", :value => "false" %>  
              <%= form.radio_button :for_sale, false %>
            </div>
           </div>
        </div>
       </div>

    </div>
    <div class="col col-lg-4 col-md-12 col-sm-12">
<!-- Price -->
        <div class="form-group">
          <%= form.label :price, class: "products-label" %>
          <%= form.text_field :price, id: :product_price, class: " form-control" %>
        </div>
<!-- QTY -->
        <div class="field">
          <%= form.label :quantity, class: "products-label" %>
          <%= form.number_field :quantity, id: :product_quantity, class: "form-control" %>
        </div>

       <hr>
 



<!-- Medium -->
         <div class="field">
          <%= form.label :medium, class: "products-label" %>
          <%= form.text_field :medium, id: :product_medium, class: "form-control" %>
        </div>

<!-- Size -->
         <br />
         <div class="field">
         
          <p>
          <%= form.label :width, class: "products-label" %>
          <%= form.text_field :width, id: :width, class: "products-field-dems" %>

          <%= form.label :height, class: "products-label" %>
          <%= form.text_field :height, id: :height, class: "products-field-dems" %>
        
           <%= form.label :depth, class: "products-label" %> 
           <%= form.text_field :depth, id: :depth, class: "products-field-dems " %>
         </p>

        </div>

<!-- description -->

        <div class="field">
          <%= form.label :description, class: "products-label" %>
          <%= form.text_area :description, id: :product_description, class: "products-field form-control" %>
        </div>        

        <br />

        <div class="actions">

          
          <%= link_to 'All Pieces', products_path, class: "btn btn-default" %>
          <%= form.submit class: "btn btn-warning" %>

        </div>

        <br />
        <br />

      </div>
    </div>
  </div>
<% end %>
