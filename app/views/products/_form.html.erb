<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
    <div class="col col-lg-4 col-md-6 col-sm-6">
<!-- Image -->
  <div class="field">
    <p class="products-label">Image</p>
    <% if product.image.url != nil %>
    <%= image_tag product.image.url, class: "products-pic" %>
    <% end %>
  </div>
    <!-- Upload Image -->
        <div class="form-group">
          <strong class="products-label">Upload an Image</strong>
          <%= form.file_field :image, class: "btn btn-default form-control" %>
        </div>
<!--  Image Type -->

        <div class="form-group">
          <%= form.label :image_type, class: "products-label" %>
          <%= form.select :image_type, ['Square', 'Landscape', 'Portrait'], {include_blank: "Please select a format"}, class: "form-control" %>
        </div>

<!-- Category -->


      <div class="form-group">
          <%= form.label :category, class: "products-label" %>
          <%= form.select :category, ['Fine Art', 'People Portraits', 'Pet Portraits', 'Previous Work'], {include_blank: "Please select a category"}, class: "form-control" %>
        </div>


    </div>
<div class="col col-lg-4 col-md-6 col-sm-6">

<!-- Feature or not -->
        <div class="field btn-for-sale" data-toggle="toogle">
          <%= form.label "Feature on Home Screen", class: "products-label" %>
            <div class=" form-group">
              <%= form.label :feature_image, "Yes", :value => "true" %>
              <%= form.radio_button :feature_image, true%>
              <%= form.label :feature_image, "No", :value => "false" %>      
              <%= form.radio_button :feature_image, false %>
            </div>
         </div>

        <hr>
  <!-- For Sale Toogle -->
        <div class="field btn-for-sale" data-toggle="toogle">
          <%= form.label :for_sale, class: "products-label" %>
            <div class=" form-group" >
      
              <%= form.label :for_sale, "Sale", :value => "true" %>
              <%= form.radio_button :for_sale, true %>
              <%= form.label :for_sale, "No", :value => "false" %>      
              <%= form.radio_button :for_sale, false %>
            </div>
         </div>
<!-- Price -->
        <div class="form-group">
          <%= form.label :price, class: "products-label" %>
          <%= form.text_field :price, id: :product_price, class: "products-field form-control" %>
        </div>
<!-- QTY -->
        <div class="field">
          <%= form.label :quantity, class: "products-label" %>
          <%= form.number_field :quantity, id: :product_quantity, class: "products-field form-control" %>
        </div>

       <hr>
      </div>

    <div class="col col-lg-4 col-md-6 col-sm-6">
       
<!-- Image Name -->
        <div class="field">
          <%= form.label :name, class: "products-label" %>
          <%= form.text_field :name, id: :product_name, class: "products-field form-control" %>
        </div>
<!-- Medium -->
         <div class="field">
          <%= form.label :medium, class: "products-label" %>
          <%= form.text_field :medium, id: :product_medium, class: "products-field form-control" %>
        </div>
<!-- Year -->
        <div class="field">
          <%= form.label :year, class: "products-label" %>
          <%= form.number_field :year, id: :product_year, in: 1960...2070, class: "products-field form-control" %>
        </div>
<!-- Size -->
         <div class="field">
          <%= form.label :size, class: "products-label" %> 
          <%= form.text_field :size, id: :product_size, class: "products-field form-control" %>
        </div>

<!-- description -->

        <div class="field">
          <%= form.label :description, class: "products-label" %>
          <%= form.text_area :description, id: :product_description, class: "products-field form-control" %>
        </div>        

        <br />

        <div class="actions">
          <%= form.submit class: "btn btn-warning" %>
          <%= link_to 'Show', @product, class: "btn btn-default" %> 
          <%= link_to 'Inventory', products_path, class: "btn btn-default" %>

        </div>

      </div>
    </div>
  </div>
<% end %>
